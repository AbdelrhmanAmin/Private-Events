<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Event:</th>
      <th>Creator:</th>
      <th>Date</th>
    </tr>
  </thead>

  <h4>Upcoming Events</h4>
  <tbody>
    <% @events.coming_events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.creator.name %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', event %></td>
        <% if user_signed_in? %>
          <% if event.creator.id == current_user.id %>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= button_to 'Destroy', event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end%>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
