<p id="notice"><%= notice %></p>
  <h3>Creator</h3>
  <%= @event.creator.name %> <br>
  <h3>Event title</h3>
  <%= @event.title %> <br>
  <%if @event.attendances.length > 0%>
  <h4>Attendees</h4>
    <% @event.attendances.each do |e| %>
      <%= e.name %> <br>
      <% if user_signed_in? %>
        <% if current_user.id != @event.creator.id && e.id != current_user.id && @event.date > Date.today %>
          <%= form_for @attendance do |form| %>
            <%= form.hidden_field :event_id, value: @event.id %>
            <%= form.hidden_field :user_id, value: current_user.id %>
            <%= form.submit %>
          <%end%>
        <%end%>
    <% end %>
    <%end%>
  <%else%>
  <% if user_signed_in? %>
        <% if current_user.id != @event.creator.id && @event.date > Date.today %>
          <%= form_for @attendance do |form| %>
            <%= form.hidden_field :event_id, value: @event.id %>
            <%= form.hidden_field :user_id, value: current_user.id %>
            <%= form.submit %>
          <%end%>
        <%end%>
  <%end%>
  <%end%>
